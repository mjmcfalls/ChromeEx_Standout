{
  "name": "Standout Daily Check-in Extension",
  "version": "1.0",
  "description": "Periodically nudges for Standout check-ins at a set interval.",
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "js/moment.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://standout.tmbc.com/myteam/myteamconsole"
      ],
      "js": [
        "js/contentScript.js",
        "js/moment.js"
      ]
    }
  ],
  "manifest_version": 2
}